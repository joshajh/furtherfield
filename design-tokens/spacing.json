{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "meta": {
    "name": "Furtherfield Design Tokens - Spacing",
    "version": "4.0.0",
    "description": "Spacing system - active tokens only"
  },
  "spacing": {
    "container": {
      "value": "10px",
      "type": "spacing",
      "description": "Base container padding / gap between sections"
    }
  },
  "borderRadius": {
    "sm": {
      "value": "4px",
      "type": "borderRadius",
      "description": "Tags, callouts, inputs"
    },
    "lg": {
      "value": "8px",
      "type": "borderRadius",
      "description": "Cards, sections"
    }
  },
  "borderWidth": {
    "default": {
      "value": "1px",
      "type": "borderWidth",
      "description": "Standard border width"
    },
    "callout": {
      "value": "2px",
      "type": "borderWidth",
      "description": "Callout underline small"
    },
    "calloutLg": {
      "value": "3px",
      "type": "borderWidth",
      "description": "Callout underline default"
    }
  },
  "animation": {
    "duration": {
      "fast": {
        "value": "200ms",
        "type": "duration",
        "description": "Hover transitions"
      },
      "marquee": {
        "value": "20s",
        "type": "duration",
        "description": "Marquee animation duration"
      }
    },
    "easing": {
      "default": {
        "value": "ease",
        "type": "cubicBezier",
        "description": "Default easing"
      }
    }
  },
  "css": {
    "variables": {
      "--spacing-container": "10px",
      "--radius-card": "8px",
      "--animate-marquee": "marquee 20s linear infinite"
    }
  },
  "tailwind": {
    "extend": {
      "spacing": {
        "container": "10px"
      },
      "borderRadius": {
        "card": "8px"
      }
    }
  }
}
