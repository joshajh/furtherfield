{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "meta": {
    "name": "Furtherfield Design Tokens - Colors",
    "version": "5.0.0",
    "description": "Flattened color system - 1:1 with CSS variables"
  },
  "colors": {
    "bg-dark": {
      "value": "#0F0E0E",
      "type": "color",
      "description": "Primary dark background, also used for dark text"
    },
    "text-light": {
      "value": "#F6F8FB",
      "type": "color",
      "description": "Light text on dark backgrounds"
    },
    "text-dark": {
      "value": "#0F0E0E",
      "type": "color",
      "description": "Dark text on light backgrounds (same as bg-dark)"
    },
    "divider": {
      "value": "#555659",
      "type": "color",
      "description": "Divider lines, borders, muted text"
    },
    "gradient-start": {
      "value": "#BCE5F3",
      "type": "color",
      "description": "Brand gradient start - sky blue"
    },
    "gradient-end": {
      "value": "#D0D6FD",
      "type": "color",
      "description": "Brand gradient end - lavender"
    },
    "treatment-dark": {
      "value": "rgba(140, 160, 180, 0.7)",
      "type": "color",
      "description": "Dark image treatment overlay"
    },
    "treatment-light": {
      "value": "rgba(220, 200, 210, 0.6)",
      "type": "color",
      "description": "Light image treatment overlay"
    },
    "treatment-lemon": {
      "value": "rgba(245, 235, 180, 0.85)",
      "type": "color",
      "description": "Lemon/cream treatment - hover states, highlights"
    },
    "treatment-acid": {
      "value": "rgba(200, 255, 0, 0.85)",
      "type": "color",
      "description": "Acid yellow - callouts, active states, primary accent"
    },
    "treatment-lavender": {
      "value": "rgba(220, 200, 220, 0.85)",
      "type": "color",
      "description": "Lavender overlay for soft accents"
    }
  },
  "gradients": {
    "brand": {
      "value": "linear-gradient(to bottom, #BCE5F3, #D0D6FD)",
      "type": "gradient",
      "description": "Primary brand gradient with noise overlay"
    },
    "lemon": {
      "value": "linear-gradient(135deg, rgba(245, 235, 180, 0.9) 0%, rgba(220, 200, 140, 0.85) 100%)",
      "type": "gradient",
      "description": "Lemon gradient for hover effects"
    }
  },
  "css": {
    "variables": {
      "--color-bg-dark": "#0F0E0E",
      "--color-text-light": "#F6F8FB",
      "--color-text-dark": "#0F0E0E",
      "--color-divider": "#555659",
      "--color-gradient-start": "#BCE5F3",
      "--color-gradient-end": "#D0D6FD",
      "--color-treatment-dark": "rgba(140, 160, 180, 0.7)",
      "--color-treatment-light": "rgba(220, 200, 210, 0.6)",
      "--color-treatment-lemon": "rgba(245, 235, 180, 0.85)",
      "--color-treatment-acid": "rgba(200, 255, 0, 0.85)",
      "--color-treatment-lavender": "rgba(220, 200, 220, 0.85)",
      "--gradient-brand": "linear-gradient(to bottom, #BCE5F3, #D0D6FD)",
      "--gradient-lemon": "linear-gradient(135deg, rgba(245, 235, 180, 0.9) 0%, rgba(220, 200, 140, 0.85) 100%)"
    }
  },
  "tailwind": {
    "extend": {
      "colors": {
        "bg-dark": "#0F0E0E",
        "text-light": "#F6F8FB",
        "text-dark": "#0F0E0E",
        "divider": "#555659",
        "gradient-start": "#BCE5F3",
        "gradient-end": "#D0D6FD",
        "treatment-dark": "rgba(140, 160, 180, 0.7)",
        "treatment-light": "rgba(220, 200, 210, 0.6)",
        "treatment-lemon": "rgba(245, 235, 180, 0.85)",
        "treatment-acid": "rgba(200, 255, 0, 0.85)",
        "treatment-lavender": "rgba(220, 200, 220, 0.85)"
      }
    }
  }
}
