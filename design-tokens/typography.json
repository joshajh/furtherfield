{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "meta": {
    "name": "Furtherfield Design Tokens - Typography",
    "version": "5.0.0",
    "description": "Typography system - sans-serif focused"
  },
  "typography": {
    "fontFamily": {
      "sans": {
        "value": "Plus Jakarta Sans, ui-sans-serif, system-ui, sans-serif",
        "type": "fontFamily",
        "description": "Primary sans-serif font for body text"
      },
      "mono": {
        "value": "Geist Mono, ui-monospace, monospace",
        "type": "fontFamily",
        "description": "Monospace font for tags, callouts, and technical content"
      },
      "display": {
        "value": "Rubik, ui-sans-serif, system-ui, sans-serif",
        "type": "fontFamily",
        "description": "Display font for headings and subheads"
      }
    },
    "fontWeight": {
      "regular": {
        "value": "400",
        "type": "fontWeight"
      },
      "medium": {
        "value": "500",
        "type": "fontWeight"
      },
      "semibold": {
        "value": "600",
        "type": "fontWeight"
      }
    },
    "fontSize": {
      "xs": {
        "value": "11px",
        "type": "fontSize",
        "description": "Extra small - callout-sm, tag-sm"
      },
      "sm": {
        "value": "12px",
        "type": "fontSize",
        "description": "Small - tags, callouts"
      },
      "base": {
        "value": "14px",
        "type": "fontSize",
        "description": "Base - tags (desktop), body small"
      },
      "lg": {
        "value": "16px",
        "type": "fontSize",
        "description": "Large - body text"
      }
    },
    "textTransform": {
      "uppercase": {
        "value": "uppercase",
        "type": "textTransform",
        "description": "Used for tags and callouts"
      }
    },
    "letterSpacing": {
      "tags": {
        "value": "0.02em",
        "type": "letterSpacing",
        "description": "Letter spacing for tags and callouts"
      }
    }
  },
  "css": {
    "variables": {
      "--font-sans": "Plus Jakarta Sans, ui-sans-serif, system-ui, sans-serif",
      "--font-mono": "Geist Mono, ui-monospace, monospace",
      "--font-display": "Rubik, ui-sans-serif, system-ui, sans-serif"
    }
  },
  "tailwind": {
    "extend": {
      "fontFamily": {
        "sans": ["var(--font-plus-jakarta)", "ui-sans-serif", "system-ui", "sans-serif"],
        "mono": ["var(--font-geist-mono)", "ui-monospace", "monospace"],
        "display": ["var(--font-rubik)", "ui-sans-serif", "system-ui", "sans-serif"]
      }
    }
  }
}
